<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginBaseDatos.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout>
                    <Grid VerticalOptions="CenterAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Entry Placeholder="UserName" x:Name="EntryUser" Grid.Row="0"/>
                        <Entry Placeholder="Password" IsPassword="True" x:Name="EntryPassword" Grid.Row="1"/>
                        <Button Text="Login" Grid.Row="2" BackgroundColor="#0077be" TextColor="White" Clicked="Handle_Clicked_1"/>
                        <Button Text="SingUp" Grid.Row="3" Clicked="Handle_Clicked" />
                    </Grid>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>